<div class="flex flex-col h-full bg-gray-800">
  <!-- Header -->
  <header class="bg-gray-900 border-b border-gray-700 px-4 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
        <span class="text-white text-lg">ğŸ¤–</span>
      </div>
      <div>
        <h1 class="font-semibold text-white">Chat</h1>
        <p class="text-xs text-gray-400">Session: {String.slice(@session_key || "", 0..15)}...</p>
      </div>
    </div>
    <button
      phx-click="new_chat"
      class="px-3 py-1.5 text-sm bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors"
    >
      æ–°å¯¹è¯
    </button>
  </header>
  
<!-- Messages -->
  <main
    class="flex-1 overflow-y-auto p-4 space-y-4 scrollbar-thin"
    id="messages-container"
    phx-hook="MessageContainer"
  >
    <%= if @messages == [] do %>
      <div class="flex flex-col items-center justify-center h-full text-gray-400">
        <div class="text-6xl mb-4">ğŸ‘‹</div>
        <p class="text-lg">å¼€å§‹å¯¹è¯å§ï¼</p>
        <p class="text-sm text-gray-500">è¾“å…¥æ¶ˆæ¯å¹¶æŒ‰ Enter å‘é€</p>
      </div>
    <% else %>
      <%= for message <- @messages do %>
        <%= if message.role == "tools" do %>
          <%!-- å·¥å…·è°ƒç”¨æ¶ˆæ¯ï¼ˆå·²ä¿å­˜çš„å†å²ï¼‰ --%>
          <.tools_bubble tools={message.content} collapsed={true} />
        <% else %>
          <div class={[
            "flex",
            message.role == "user" && "justify-end",
            message.role != "user" && "justify-start"
          ]}>
            <div class={[
              "max-w-[80%] rounded-2xl px-4 py-2 shadow-sm",
              message.role == "user" && "bg-blue-600 text-white",
              message.role == "assistant" && "bg-gray-700 text-gray-100",
              message.role == "error" && "bg-red-900/50 text-red-200 border border-red-700"
            ]}>
              <div class={[
                "break-words",
                message.role == "assistant" && "message-content"
              ]}>
                {ClawdExWeb.ContentRenderer.render_content(message.content)}
              </div>
              <div class={[
                "text-xs mt-1 opacity-70",
                message.role == "user" && "text-right"
              ]}>
                {Calendar.strftime(message.timestamp, "%H:%M")}
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    
<!-- Streaming content -->
    <%= if @streaming_content && @streaming_content != "" do %>
      <div class="flex justify-start">
        <div class="max-w-[80%] rounded-2xl px-4 py-2 shadow-sm bg-gray-700 text-gray-100">
          <div class="message-content break-words">
            {ClawdExWeb.ContentRenderer.render_content(@streaming_content)}
          </div>
          <div class="flex items-center gap-1 mt-1">
            <span class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce"></span>
            <span
              class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce"
              style="animation-delay: 0.1s"
            >
            </span>
            <span
              class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-bounce"
              style="animation-delay: 0.2s"
            >
            </span>
          </div>
        </div>
      </div>
    <% end %>
    
<!-- Tool Executions History (å®æ—¶å·¥å…·è°ƒç”¨) -->
    <%= if @tool_executions != [] do %>
      <div class="flex justify-start">
        <div class="max-w-[85%] rounded-2xl px-3 py-2 shadow-sm bg-gray-900 text-gray-300 border border-gray-700">
          <div class="flex items-center justify-between mb-2">
            <div class="text-xs text-gray-400 font-medium flex items-center gap-1">
              <span>ğŸ”§</span>
              <span>å·¥å…·è°ƒç”¨</span>
              <span class="text-gray-500">({length(@tool_executions)})</span>
            </div>
            <%= if length(@tool_executions) > 3 do %>
              <button
                phx-click="toggle_tools_modal"
                class="text-xs text-blue-400 hover:text-blue-300 transition-colors"
              >
                æŸ¥çœ‹å…¨éƒ¨
              </button>
            <% end %>
          </div>
          <%!-- åªæ˜¾ç¤ºæœ€è¿‘3ä¸ªï¼Œå…¶ä½™æŠ˜å  --%>
          <div class="space-y-2">
            <% total = length(@tool_executions) %>
            <% display_execs =
              if total > 3, do: Enum.drop(@tool_executions, total - 3), else: @tool_executions %>
            <% start_idx = if total > 3, do: total - 3, else: 0 %>
            <%= for {exec, offset} <- Enum.with_index(display_execs) do %>
              <% idx = start_idx + offset %>
              <div class={[
                "flex items-start gap-2 text-xs p-2 rounded-lg",
                exec.status == :running && "bg-blue-900/30 border border-blue-800",
                exec.status == :done && "bg-green-900/30 border border-green-800",
                exec.status == :error && "bg-red-900/30 border border-red-800",
                exec.status not in [:running, :done, :error] && "bg-gray-800"
              ]}>
                <!-- åºå·å’ŒçŠ¶æ€ -->
                <div class="flex items-center gap-1 flex-shrink-0">
                  <span class="text-gray-500 w-4">{idx + 1}.</span>
                  <%= case exec.status do %>
                    <% :running -> %>
                      <svg
                        class="animate-spin h-3.5 w-3.5 text-blue-400"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                      >
                        <circle
                          class="opacity-25"
                          cx="12"
                          cy="12"
                          r="10"
                          stroke="currentColor"
                          stroke-width="4"
                        >
                        </circle>
                        <path
                          class="opacity-75"
                          fill="currentColor"
                          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"
                        >
                        </path>
                      </svg>
                    <% :done -> %>
                      <span class="text-green-400">âœ“</span>
                    <% :error -> %>
                      <span class="text-red-400">âœ—</span>
                    <% _ -> %>
                      <span class="text-gray-500">â—‹</span>
                  <% end %>
                </div>
                <!-- å·¥å…·ä¿¡æ¯ -->
                <div class="flex-1 min-w-0">
                  <div class="font-mono font-medium text-gray-200">{exec.tool || "unknown"}</div>
                  <%= if exec[:params] do %>
                    <div class="text-gray-500 truncate mt-0.5">{exec.params}</div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <%= if length(@tool_executions) > 3 do %>
            <div class="text-xs text-gray-500 mt-2 text-center">
              è¿˜æœ‰ {length(@tool_executions) - 3} ä¸ªå·¥å…·è°ƒç”¨...
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
<!-- Current Status (inferring/etc) -->
    <%= if @run_status && elem(@run_status, 0) == :inferring do %>
      <div class="flex justify-start">
        <div class="max-w-[80%] rounded-2xl px-4 py-2 shadow-sm bg-blue-900/30 text-blue-200 border border-blue-800">
          <div class="flex items-center gap-2">
            <svg
              class="animate-spin h-4 w-4 text-blue-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              >
              </circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"
              >
              </path>
            </svg>
            <span class="text-sm font-medium">æ€è€ƒä¸­...</span>
          </div>
        </div>
      </div>
    <% end %>
    
<!-- Typing indicator -->
    <%= if @sending && @run_status == nil && (@streaming_content == nil || @streaming_content == "") do %>
      <div class="flex justify-start">
        <div class="bg-gray-700 rounded-2xl px-4 py-3 shadow-sm">
          <div class="flex items-center gap-1">
            <span class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"></span>
            <span
              class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"
              style="animation-delay: 0.1s"
            >
            </span>
            <span
              class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"
              style="animation-delay: 0.2s"
            >
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </main>
  
<!-- Input -->
  <footer class="bg-gray-900 border-t border-gray-700 p-4">
    <form phx-submit="send" class="flex gap-2">
      <textarea
        name="message"
        value={@input}
        phx-keydown="keydown"
        phx-change="update_input"
        placeholder="è¾“å…¥æ¶ˆæ¯..."
        rows="1"
        disabled={@sending}
        class={[
          "flex-1 resize-none rounded-xl border border-gray-600 px-4 py-2",
          "bg-gray-800 text-white placeholder-gray-400",
          "focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          "disabled:bg-gray-700 disabled:cursor-not-allowed",
          "min-h-[44px] max-h-[120px]"
        ]}
        phx-hook="ChatInput"
        id="message-input"
      ><%= @input %></textarea>
      <button
        type="submit"
        disabled={@sending || @input == ""}
        class={[
          "px-4 py-2 rounded-xl font-medium transition-colors",
          "bg-blue-600 text-white hover:bg-blue-700",
          "disabled:bg-gray-600 disabled:cursor-not-allowed"
        ]}
      >
        <%= if @sending do %>
          <span class="flex items-center gap-2">
            <svg
              class="animate-spin h-4 w-4"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              >
              </circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"
              >
              </path>
            </svg>
            å‘é€ä¸­
          </span>
        <% else %>
          å‘é€
        <% end %>
      </button>
    </form>
  </footer>
  
<!-- Tools Modal -->
  <%= if @tools_expanded && @tool_executions != [] do %>
    <div
      class="fixed inset-0 bg-black/60 flex items-center justify-center z-50"
      phx-click="close_tools_modal"
    >
      <div
        class="bg-gray-800 rounded-2xl shadow-xl max-w-lg w-full mx-4 max-h-[80vh] flex flex-col"
        phx-click-away="close_tools_modal"
      >
        <!-- Modal Header -->
        <div class="flex items-center justify-between px-4 py-3 border-b border-gray-700">
          <h3 class="text-lg font-semibold text-white flex items-center gap-2">
            <span>ğŸ”§</span>
            <span>å·¥å…·è°ƒç”¨è¯¦æƒ…</span>
            <span class="text-sm text-gray-400">({length(@tool_executions)})</span>
          </h3>
          <button
            phx-click="close_tools_modal"
            class="text-gray-400 hover:text-white transition-colors p-1"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </button>
        </div>
        <!-- Modal Body -->
        <div class="flex-1 overflow-y-auto p-4 space-y-2">
          <%= for {exec, idx} <- Enum.with_index(@tool_executions) do %>
            <div class={[
              "flex items-start gap-3 text-sm p-3 rounded-lg",
              exec.status == :running && "bg-blue-900/30 border border-blue-800",
              exec.status == :done && "bg-green-900/30 border border-green-800",
              exec.status == :error && "bg-red-900/30 border border-red-800",
              exec.status not in [:running, :done, :error] && "bg-gray-700"
            ]}>
              <!-- åºå·å’ŒçŠ¶æ€ -->
              <div class="flex items-center gap-2 flex-shrink-0">
                <span class="text-gray-500 w-5 text-right">{idx + 1}.</span>
                <%= case exec.status do %>
                  <% :running -> %>
                    <svg
                      class="animate-spin h-4 w-4 text-blue-400"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                    >
                      <circle
                        class="opacity-25"
                        cx="12"
                        cy="12"
                        r="10"
                        stroke="currentColor"
                        stroke-width="4"
                      >
                      </circle>
                      <path
                        class="opacity-75"
                        fill="currentColor"
                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"
                      >
                      </path>
                    </svg>
                  <% :done -> %>
                    <span class="text-green-400 text-base">âœ“</span>
                  <% :error -> %>
                    <span class="text-red-400 text-base">âœ—</span>
                  <% _ -> %>
                    <span class="text-gray-500 text-base">â—‹</span>
                <% end %>
              </div>
              <!-- å·¥å…·ä¿¡æ¯ -->
              <div class="flex-1 min-w-0">
                <div class="font-mono font-medium text-gray-200">{exec.tool || "unknown"}</div>
                <%= if exec[:params] do %>
                  <div class="text-gray-400 text-xs mt-1 break-all">{exec.params}</div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
