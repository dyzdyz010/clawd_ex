<Layouts.app flash={@flash}>
  <div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Dashboard</h1>

    <%!-- Stats Cards --%>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-8">
      <.stat_card title="Agents" value={@agents_count} icon="ğŸ¤–" color="blue" />
      <.stat_card title="Total Sessions" value={@sessions_count} icon="ğŸ’¬" color="purple" />
      <.stat_card title="Active Sessions" value={@active_sessions} icon="ğŸŸ¢" color="green" />
      <.stat_card title="Total Messages" value={@messages_count} icon="ğŸ“" color="yellow" />
      <.stat_card title="Today's Messages" value={@today_messages} icon="ğŸ“…" color="pink" />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%!-- Recent Sessions --%>
      <div class="bg-gray-800 rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">Recent Sessions</h2>
          <.link navigate={~p"/sessions"} class="text-blue-400 hover:text-blue-300 text-sm">
            View All â†’
          </.link>
        </div>
        <div class="space-y-3">
          <%= for session <- @recent_sessions do %>
            <.link navigate={~p"/sessions/#{session.id}"} class="block">
              <div class="bg-gray-700 rounded-lg p-3 hover:bg-gray-600 transition-colors">
                <div class="flex justify-between items-start">
                  <div>
                    <div class="font-medium truncate max-w-xs">
                      {session.session_key}
                    </div>
                    <div class="text-sm text-gray-400">
                      {if session.agent, do: session.agent.name, else: "No Agent"} Â· {session.channel}
                    </div>
                  </div>
                  <.session_state_badge state={session.state} />
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  {format_time(session.last_activity_at)}
                </div>
              </div>
            </.link>
          <% end %>
          <%= if Enum.empty?(@recent_sessions) do %>
            <div class="text-gray-500 text-center py-4">No sessions yet</div>
          <% end %>
        </div>
      </div>

      <%!-- Recent Messages --%>
      <div class="bg-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Messages</h2>
        <div class="space-y-2 max-h-96 overflow-y-auto">
          <%= for message <- @recent_messages do %>
            <div class="bg-gray-700 rounded-lg p-3">
              <div class="flex items-center gap-2 mb-1">
                <.role_badge role={message.role} compact />
                <span class="text-xs text-gray-500">
                  {format_time(message.inserted_at)}
                </span>
              </div>
              <div class="text-sm text-gray-300 truncate">
                {truncate_content(message.content, 100)}
              </div>
            </div>
          <% end %>
          <%= if Enum.empty?(@recent_messages) do %>
            <div class="text-gray-500 text-center py-4">No messages yet</div>
          <% end %>
        </div>
      </div>
    </div>

    <%!-- System Health --%>
    <div class="mt-8 bg-gray-800 rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">System Health</h2>
        <span class={"px-3 py-1 rounded-full text-sm font-medium #{if @health.healthy, do: "bg-green-500/20 text-green-400", else: "bg-red-500/20 text-red-400"}"}>
          <%= if @health.healthy, do: "âœ“ Healthy", else: "âœ— Issues Detected" %>
        </span>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-3">
        <%= for {name, check} <- @health.checks do %>
          <div class={"p-3 rounded-lg #{health_check_bg(check.status)}"}>
            <div class="flex items-center gap-2 mb-1">
              <span class={"text-sm #{health_check_color(check.status)}"}>
                <%= health_check_icon(check.status) %>
              </span>
              <span class="text-sm font-medium text-white capitalize">
                <%= name %>
              </span>
            </div>
            <div class="text-xs text-gray-400 truncate" title={check.message}>
              <%= String.slice(check.message || "", 0, 30) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%!-- Quick Actions --%>
    <div class="mt-8 bg-gray-800 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
      <div class="flex flex-wrap gap-4">
        <.link navigate={~p"/chat"} class="btn-primary">
          ğŸ’¬ New Chat
        </.link>
        <.link navigate={~p"/agents/new"} class="btn-secondary">
          ğŸ¤– Create Agent
        </.link>
        <.link navigate={~p"/sessions"} class="btn-secondary">
          ğŸ“‹ Manage Sessions
        </.link>
        <.link navigate={~p"/agents"} class="btn-secondary">
          âš™ï¸ Manage Agents
        </.link>
        <.link navigate={~p"/cron/new"} class="btn-secondary">
          â° New Cron Job
        </.link>
        <.link navigate={~p"/settings"} class="btn-secondary">
          âš™ï¸ Settings
        </.link>
      </div>
    </div>
  </div>
</Layouts.app>
